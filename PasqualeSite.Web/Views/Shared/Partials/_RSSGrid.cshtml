
<br />
<div class="form-inline">
    <button data-bind="click: function() { AddRSS() }" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Add RSS Feed</button>
    <input data-bind="textInput: NewRSS" class="form-control" id="newname" placeholder="Name">
    <input data-bind="textInput: NewRSSFeed" class="form-control" id="newname" placeholder="Feed URL">
</div>

<br />
<div id="rssGrid" class="gridStyle" data-bind="koGrid: RSSGridOptions"></div>

<!--ko if: SelectedRSS().length > 0-->
<div id="editRSS" class="well" data-bind="with: SelectedRSS()[0]">
    <div class="form-group">
        <button class="btn btn-primary" data-bind="click: function() { $parent.BackToRSSGrid(); }"><span class="glyphicon glyphicon-chevron-left"></span> Back</button>
    </div>
    <div class="form-group">
        <label for="title">Name</label>
        <input data-bind="textInput: Name" class="form-control" id="name" placeholder="Name">
    </div>
    <div class="form-group">
        <label for="title">RSS Url</label>
        <input data-bind="textInput: FeedUrl " class="form-control" id="name" placeholder="Name">
    </div>
    <div class="form-inline">
        <button data-bind="click: function() { SaveRSS(true) }" type="button" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span> Save RSS Feed</button>
        <button data-bind="click: function() { DeleteRSS() }" type="button" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete RSS Feed</button>
    </div>
</div>
